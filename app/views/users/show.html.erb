<%# User's info  %>
<%= @user.name %>
<%= @user.age %>
<%= @user.email %>
<%= @user.password %>
<%= @user.about %>

<br>
<br>
Date:
<%= Date.today %><br>
Todays Activities: <br>
<% if @user.is_today %>
  <% @user.today.activities.each do |activity| %>
    <%= activity.name %><br>
  <% end %>
<% end %><br>
<%= link_to "View Full Activities History", days_path %><br>
<%= link_to "View Activities to add", activities_path %>

<br>
<br>
<br>
Friends:
<% @user.friends.each do |friend| %><br>
  <%= link_to friend.name, user_path(friend.id) %><br>
  <% if friend.is_today %>
    <% friend.today.activities.each do |activity| %>
      <%= activity.name %><br>
    <% end %>
  <% end %>
<% end %><br>
<%= link_to "Add Friend", "/friendships/new" %>

<%= button_to 'Logout', '/', method: :delete %>
