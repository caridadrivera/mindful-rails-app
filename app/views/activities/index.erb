<div class="container text-center">
  <h1><strong>All Activities</strong></h1>
  <% if flash[:message] %>
  <%= flash[:message] %><br>
  <% end %>
  <% if session[:selected_date] %>
    <h4><%= "Add an Activity for #{session[:selected_date]}" %></h4>
  <% else %>
    <h4><%= "Add an Activity for Today" %></h4>
  <% end %>


  <div class="special-card-container">
    <% @activities.each do |activity| %>
      <div class="special-card">
        <div class="special-card-body">
          <img class="center-cropped" src= <%= activity.img_url %> alt="Card image cap">
          <h5 class="card-title"><%= activity.name %></h5>
          <p><%= link_to "Add Activity", "/activity_instances/new/#{activity.id}", method: :get %>
          <%= link_to "More Info", activity_path(activity), {method: :get} %></p>
        </div>
      </div>
    <% end %>
  </div>
  <%= button_to "Create a New Activity", new_activity_path, {method: :get} %>
  <%= button_to "Back", user_path(current_user), {method: :get} %>
</div>
