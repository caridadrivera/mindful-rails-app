<!DOCTYPE html>
<html>
  <head>
    <title>HAPPINESS</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <nav class="navbar navbar-expand-lg navbar-dark bg-gray-dark">
      <a class="navbar-brand" href="/">Mindful</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
    <% if !!current_user %>
      <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav mr-auto nav-fill w-25">
          <li class="nav-item active">
            <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/activities">Activities</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/users/<%= current_user.id %>/days">History</a>
          </li>

          <li class="nav-item active">
            <a class="nav-link" href="#">Profile</a>
          </li>
        </ul>
        <div class="nav navbar-nav navbar-right">
           <a href= "/users/logout" class="btn btn-secondary my-2 my-sm-0">Logout</a>
        </div>
      </div>
      <% end %>
    </nav>

  </head>

  <body>
<div class="container">
  <%= yield %>

</div>
  </body>
</html>
